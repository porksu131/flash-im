<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.szr.flashim.auth.mapper.UserMapper">
    <select id="getByUserName" resultType="com.szr.flashim.auth.model.pojo.UserInfo">
        SELECT *
        FROM flashim_user
        WHERE user_name = #{userName}
    </select>
    <select id="getByUid" resultType="com.szr.flashim.auth.model.pojo.UserInfo">
        SELECT * FROM flashim_user WHERE uid = #{uid}
    </select>

    <insert id="save" parameterType="com.szr.flashim.auth.model.pojo.UserInfo" >
        INSERT INTO flashim_user
            (uid, user_name, password, phone, enabled_flag)
        VALUES
            (#{uid}, #{userName}, #{password}, #{phone}, #{enabledFlag})
    </insert>

    <insert id="saveFriendRelation" parameterType="com.szr.flashim.auth.model.pojo.FriendRelation">
        INSERT INTO flashim_friend_relation
            (id, uid, friend_id, user_name, friend_name)
        VALUES
            (#{id}, #{uid}, #{friendId}, #{userName}, #{friendName})
    </insert>
</mapper>